<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <base href="@(Request.ApplicationPath == "/" ? "/" : Request.ApplicationPath + "/")">
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <link href="Content/bootstrap.css?cacheKey=@ViewBag.Version" rel="stylesheet" />
        <link href="Content/main.css?cacheKey=@ViewBag.Version" rel="stylesheet" />
    </head>
    <body data-ng-app="mainApp">

        <!-- Fixed navbar -->
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">BSE365</a>
                </div>
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">Home</a></li>
                        <li><a href="#/pin">PIN Management</a></li>
                        <li><a href="#contact">Contact</a></li>
                        <li class="dropdown">
                            <a href="" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">User Management <span class="caret"></span></a>
                            <ul class="dropdown-menu">
                                <li><a ui-sref="user.default">Profile</a></li>
                                <li><a ui-sref="user.register">Introduce new user</a></li>
                                <li role="separator" class="divider"></li>
                                <li class="dropdown-header">Nav header</li>
                                <li><a href="#">Separated link</a></li>
                                <li><a href="#">One more separated link</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>

        <div class="container">
            @RenderBody()
        </div>

        <footer class="footer">
            <div class="container">
                <p class="text-muted">Place sticky footer content here.</p>
            </div>
        </footer>

        <script src="Scripts/Common.js?cacheKey=@ViewBag.Version"></script>
        <script src="Scripts/MainApp.js?cacheKey=@ViewBag.Version"></script>
        <script src="Scripts/CommonApp.js?cacheKey=@ViewBag.Version"></script>
        <script src="Scripts/AuthApp.js?cacheKey=@ViewBag.Version"></script>
    </body>
</html>
